<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
       <service id="dcms.admin.menu" class="DCMS\Bundle\MenuBundle\Admin\MenuAdmin">
           <tag 
               name="sonata.admin" 
               manager_type="doctrine_phpcr" 
               model_manager="sonata.admin.manager.dcms_doctrine_phpcr"
               group="Menus" 
               label="Menus"
               />
          <argument />
          <argument>DCMS\Bundle\MenuBundle\Document\Menu</argument>
          <argument>SonataAdminBundle:CRUD</argument>
          <call method="setTranslationDomain">
              <argument>DCMSMenuBundle</argument>
          </call>
      </service>
   </services>
</container>

