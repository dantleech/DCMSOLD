{% set link = path('dcms_blog_post_edit', {
    'post_uuid': post.uuid
}) %}
<div class="panel radius">
    <div class="row">
        <div class="eight columns" style="font-size: 28px">
            <a href="{{ site_context.onEndpoint ? ep_path(post) : link }}">{{ post.title }}</a>
        </div>
        <div class="four columns" style="text-align: right">
            <i>{{ post.date.format('d-m-Y H:i:s') }}</i>
        </div>
    </div>
    <div class="row">
        <div class="twelve columns" style="margin: 10px 0px 10px 0px">
            {{ post.bodyPreview }}
        </div>
    </div>
    <div class="row">
        <div class="four columns">
            <a href="{{ path('dcms_blog_post_edit', {
                'post_uuid': post.uuid
            }) }}">Edit</a> 
        </div>
        <div class="eight columns" style="text-align: right">
            Tagged: {% for tag in post.tags %}
            <a href="{{ site_context.onEndpoint ? ep_path(post.blog) ~ '?tag=' ~ tag : path('dcms_blog_post_index', {'tag': tag}) }}">{{ tag }}</a></span>
            {% endfor %}
        </div>
    </div>
</div>
