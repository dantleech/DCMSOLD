{
    "name": "dantleech/dcms",
    "description": "Dans Content Management System",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:dantleech/MenuBundle"
        },
        {
            "type": "vcs",
            "url": "git@github.com:dantleech/SonataDoctrinePhpcrAdminBundle"
        },
        {
            "type": "vcs",
            "url": "git@github.com:dantleech/RoutingExtraBundle"
        }
    ],
    "require": {
        "doctrine/doctrine-bundle": "dev-master as 1.0.x-dev",
        "doctrine/doctrine-fixtures-bundle": "dev-master",
        "doctrine/orm": ">=2.2.3,<2.4-dev",

        "behat/behat": "dev-master as v2.4.4",
        "behat/gherkin": "dev-develop as v2.2.5",
        "behat/symfony2-extension": "dev-master",
        "behat/mink": "dev-develop",
        "behat/mink-extension": "dev-master",
        "behat/mink-browserkit-driver": "*",

        "doctrine/phpcr-bundle": "1.0.*",
        "doctrine/phpcr-odm": "dev-master",
        "jackalope/jackalope-doctrine-dbal": "dev-master",
        "jackalope/jackalope-jackrabbit": "dev-master",
        "jms/di-extra-bundle": "1.2.*",
        "jms/security-extra-bundle": "1.3.*",
        "knplabs/knp-menu-bundle": "1.1.x-dev",
        "knplabs/knp-paginator-bundle": "dev-master",
        "liip/functional-test-bundle": "dev-master",
        "manymules/foundation-bundle": "dev-master",
        "php": ">=5.3.3",
        "sensio/distribution-bundle": "2.2.*",
        "sensio/framework-extra-bundle": "2.2.*",
        "sensio/generator-bundle": "2.2.*",
        "sonata-project/doctrine-phpcr-admin-bundle": "dev-master",
        "simonjodet/markdown": "1.0.x-dev",
        "symfony-cmf/routing": "dev-master",
        "symfony-cmf/routing-extra-bundle": "dev-sf2.2",
        "symfony-cmf/menu-bundle": "dev-menu_as_knp",
        "symfony/assetic-bundle": "2.1.*",
        "symfony/monolog-bundle": "dev-master",
        "symfony/swiftmailer-bundle": "2.1.*",
        "symfony/symfony": "2.2.x-dev",
        "twig/extensions": "1.0.*"
    },


    "scripts": {

        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },

    "minimum-stability": "dev",
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink"
    }
}
