<?xml version="1.0" encoding="UTF-8"?>

<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "bootstrap.php.cache" >

    <testsuites>
        <testsuite name="DCMS Routing Bundle Test Suite">
            <directory suffix="Test.php">../src/DCMS/Bundle/AdminBundle/Tests</directory>
            <directory suffix="Test.php">../src/DCMS/Bundle/BlogBundle/Tests</directory>
            <directory suffix="Test.php">../src/DCMS/Bundle/MarkdownBundle/Tests</directory>
            <directory suffix="Test.php">../src/DCMS/Bundle/CoreBundle/Tests</directory>
            <directory suffix="Test.php">../src/DCMS/Bundle/MenuBundle/Tests</directory>
            <directory suffix="Test.php">../src/DCMS/Bundle/ThemeBundle/Tests</directory>
        </testsuite>

    </testsuites>
</phpunit>
