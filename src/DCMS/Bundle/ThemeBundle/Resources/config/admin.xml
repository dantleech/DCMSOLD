<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
       <service id="dcms.admin.theme_template" class="DCMS\Bundle\ThemeBundle\Admin\TemplateAdmin">
           <tag name="dcms.admin"/>
           <tag 
               name="sonata.admin" 
               manager_type="doctrine_phpcr" 
               model_manager="sonata.admin.manager.dcms_doctrine_phpcr"
               group="Website" 
               label="Templates"
            />
          <argument />
          <argument>DCMS\Bundle\ThemeBundle\Document\Template</argument>
          <argument>SonataAdminBundle:CRUD</argument>
      </service>
  </services>
</container>